{
    "version": "0.1.0",
    "taskName": "build",
    "command": "cmd",
    "args": [
        "/C"
    ],
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "g++",
            "args": [
                "-std=c++11",
                "${fileDirname}/main.cpp",
                "-o",
                "${fileDirname}/main.exe"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${fileDirname}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "isBuildCommand": true
        },
        {
            "taskName": "run",
            "args": [
                "${fileDirname}/main.exe"
            ],
            "suppressTaskName": true,
            "isTestCommand": true
        }
    ]
}